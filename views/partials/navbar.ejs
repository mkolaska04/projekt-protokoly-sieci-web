<body>
    <div class="nav">
        <div class="logo">
            <% if (isLoggedIn) { %>
                <a href="/home">
                    <i class="fa-solid fa-kiwi-bird"></i>
                    Teeto
                </a>
            <% } else { %>
            <a href="/">
                <i class="fa-solid fa-kiwi-bird"></i>
                Teeto
            </a>
            <% } %>
        </div>
        <div class=".buttons">
            <% console.log(isLoggedIn); %>
            <% if (isLoggedIn) { %>
                <div class = "navBtn">
                    <a href="/home">Home</a>
                </div>
                <div class = "navBtn">
                    <a href="/explore">Explore</a>
                </div>
                <div class = "navBtn">  
                    <a href="/profile/<%=user_id%>">Profile</a>
                </div>
                <div class="navBtn">
                    <form action="/logout" method="GET">
                        <button id="logout-btn"type="submit">Logout</button>
                    </form>
                </div>
            <% } %>
        </div>
    </div>